---
import { Icon } from "astro-icon";

const links = [
  {
    href: "https://www.facebook.com/BontonTong",
    icon: "baseline-facebook",
    pack: "ic",
  },
  {
    href: "https://twitter.com/BontonConnect",
    icon: "twitter",
    pack: "mdi",
  },
  {
    href: "https://www.linkedin.com/company/bontonconnect/",
    icon: "linkedin",
    pack: "mdi",
  },
  {
    href: "https://www.tiktok.com/@bonton_tong",
    icon: "baseline-tiktok",
    pack: "ic",
  },
];
---

<footer
  class="px-4 md:px-0 max-w-7xl mx-auto flex flex-col px-5 py-6 justify-center items-center"
>
  <div class="flex flex-col md:flex-row justify-between w-full">
    <div class="my-12 md:my-0 w-full md:w-1/3">
      <nav class="flex flex-wrap items-center mb-4">
        {
          links.map((link) => (
            <a href={link.href} target="_blank" class="mr-5">
              <Icon
                pack={link.pack}
                name={link.icon}
                class="w-8 h-8 text-bonton-text"
              />
            </a>
          ))
        }
      </nav>
      <div>
        <span class="flex flex-col justify-center">
          <div class="flex mb-2">
            <Icon pack="ph" name="map-pin" class="w-8 h-8 inline-block mr-2" />
            <span class="text-xl font-bold bg-bonton-green-bright">
              Dhaka, Bangladesh
            </span>
          </div>

          <span class="ml-8 text-lg">
            Flat B5, House 37, Road 27,
            <br /> Block A, Banani, Dhaka - 1213
          </span>
        </span>
      </div>
    </div>
    <div
      class="order-last md:order-none w-full md:w-1/3 flex flex-wrap justify-center items-center"
    >
      <a class="-mt-1 mb-4 md:mb-0">
        <img
          src="./tong-green.svg"
          alt="Bonton Tong Logo"
          class="w-20 h-20 object-center object-contain"
        />
      </a>
      <span class="text-base mx-8">by</span>

      <a class="mb-4 md:mb-0">
        <img
          src="./bonton-logo.svg"
          alt="Bonton Connect Logo"
          class="w-20 h-20 object-center object-contain"
        />
      </a>
    </div>

    <div
      class="order-first md:order-none w-full md:w-1/3 flex flex-col md:justify-center md:items-center"
    >
      <div>
        <h1 class="text-4xl font-bold">Let's Talk</h1>
        <span class="flex items-center">
          <Icon
            pack="ic"
            name="round-mail-outline"
            class="w-8 h-8 inline-block mr-2"
          />
          <a href="mailto:hello@bonton.app" class="text-xl bg-bonton-accent">
            hello@bonton.app
          </a>
        </span>
      </div>
    </div>
  </div>
  <span class="text-base mt-8">Â© 2021 - 2023</span>
</footer>
