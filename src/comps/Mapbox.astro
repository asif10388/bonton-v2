    },
    {
      lat: 25.6226555,
      lng: 88.6891861,
    },
    {
      lat: 25.8548575,
      lng: 88.3413217,
    },
    {
      lat: 24.5605896,
      lng: 89.918847,
    },
    {
      lat: 24.3979077,
      lng: 88.9754465,
    },
  ];

  function initMap() {
    map = new window.google.maps.Map(
      document.getElementById("map") as HTMLElement,
      {
        center: { lat: 25.3281959, lng: 89.5130131 },
        zoom: 8,
      }
    );

    locations.forEach((location) => {
      new window.google.maps.Marker({
        position: location,
        map: map,
      });
    });
  }

  loader.load().then(() => {
    initMap();
  });
</script>

