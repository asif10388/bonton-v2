<script>
  declare global {
    interface Window {
      google: any;
    }
  }

  import { Loader } from "@googlemaps/js-api-loader";

  let map: any;

  const loader = new Loader({
    apiKey: "AIzaSyBIA1Gc3jOTZxqiy68P8ICr4uXjBF84BZM",
    version: "weekly",
  });

  const locations = [
    {
      lat: 26.1239113,
      lng: 88.9600845,
    },
    {
      lat: 24.9828862,
      lng: 89.8123954,
    },
    {
